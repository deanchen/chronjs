.slideshow
	width  630px
	border-radius  4px
	-webkit-border-radius  4px
	-moz-border-radius  4px
	box-shadow  0 1px 3px rgba(0,0,0,.35)
	-webkit-box-shadow  0 1px 3px rgba(0,0,0,.35)
	-moz-box-shadow  0 1px 3px rgba(0,0,0,.35)

	font-size  0.9em
	font-family  Georgia,"Century Schoolbook","Times New Roman",Times,serif
	padding 0


.slides img  
	-webkit-border-top-left-radius  4px
	-webkit-border-top-right-radius  4px
	-moz-border-radius-topleft  4px
	-moz-border-radius-topright  4px
	width  630px
	position absolute
	left 0
	top 0


.slides
	position relative
	width 630px
	text-align left
	overflow hidden
	z-index 0
	height 383px

.headlines
	display none
	width 100%
	height 50px
	text-align center
	background #fff
	*overflow hidden
	
	background -moz-linear-gradient(center bottom, rgba(223,223,223,1) 0%, rgba(242,242,242,1) 66%, rgba(242,242,242,1) 90%, rgba(230,230,230,1) 93%, rgba(190,190,190,1) 96%, rgba(150,150,150,1) 100%)
	background -webkit-gradient(linear, left bottom, left top, from(rgba(223,223,223,1)), color-stop(66%, rgba(242,242,242,1)), color-stop(90%, rgba(242,242,242,1)), color-stop(95.6%, rgba(230,230,230,1)), color-stop(97%, rgba(210,210,210,1)), to(rgba(140,140,140,1)))

	display block

	div
		width 630px margin 0 auto
	a.page
		cursor pointer
		width 180px
		height 52px
		display inline-block
		margin 0 15px
		padding 8px 0 6px
		color #666
		-webkit-transition color linear .2s

	a.page:hover
		color #111
		text-decoration none
	a.page.active
		color #111
		text-shadow 0px 1px 0px white
