headlines-height = 50px
width = 636px
height = 393px
textHeight = 80px

transition()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

shadow(opacity, height, width, offset)
    -webkit-box-shadow rgba(0, 0, 0, opacity) height width offset
    -moz-box-shadow rgba(0, 0, 0, opacity) height width offset
    box-shadow rgba(0, 0, 0, opacity) height width offset


.slideshow.right
    -webkit-box-shadow none
    -moz-box-shadow none
    .slides
        height height
        img
            margin-top 0px
.slideshow.vertical
    .headlines
        a.page
            border-bottom 1px solid transparent
            height 41px
            transition(border-color,0.25s,linear)
        a.page:hover, a.page.active
            border-bottom-color #4D90F0


.slideshow
    width width + 6
    border-radius  4px
    -webkit-border-radius  4px
    -moz-border-radius  4px
    shadow(0.398438, 0px, 1px, 3px)

    font-size  0.9em
    font-family  Georgia,"Century Schoolbook","Times New Roman",Times,serif
    padding 0
    margin-bottom 20px


    .slides img
        border-bottom 1px solid #ccc
        
        //-webkit-border-top-left-radius  4px
        //-webkit-border-top-right-radius  4px
        //-moz-border-radius-topleft  4px
        //-moz-border-radius-topright  4px
        width width
        height height
        position absolute
        left 0
        top 0
        margin-bottom textHeight
        z-index 5

    .slides
        background -webkit-gradient(linear,left bottom,left top,color-stop(0,whiteSmoke),color-stop(.33,white))
        -webkit-border-top-left-radius  4px
        -webkit-border-top-right-radius  4px
        -moz-border-radius-topleft  4px
        -moz-border-radius-topright  4px
        position relative
        width width
        text-align left
        overflow hidden
        height height + textHeight
        border 3px solid white
        //border-color #E5E5E5 #DBDBDB #D2D2D2
        box-shadow rgba(0,0,0,0.3) 0 1px 3px

        a:hover
            h1
                color #36c

        .text
            margin-top 400px
            margin-left 10px
            position absolute
            h1
                transition(color, .25s, linear)
                font-size 1.5em
                line-height 1.1em
                margin-bottom 2px

    .headlines
        display none
        width 100%
        height headlines-height
        text-align center
        background #fff
        *overflow hidden

        -webkit-border-bottom-left-radius  4px
        -webkit-border-bottom-right-radius  4px
        -moz-border-radius-bottomleft  4px
        -moz-border-radius-bottomright  4px

        background -moz-linear-gradient(center bottom,whiteSmoke 0%,white 33%)
        background -webkit-gradient(linear,left bottom,left top,color-stop(0,whiteSmoke),color-stop(.33,white))
        display block

        div
            width 630px margin 0 auto
        a.page
            cursor pointer
            width 180px
            display block
            float left
            padding 6px 15px
            padding-top 3px
            height headlines-height - (6 * 2)
            color black
            line-height 1.2em
            font-size 1em
            -webkit-transition color linear .2s
            text-shadow 0px 1px 1px white

        a.page:hover
            color #36C
            text-decoration none
        a.page.active
            color #36C
            text-shadow 0px 1px 0px white

        a.page.active:hover
            text-decoration underline

    // TODO cross browser compatibility
    b.caret
        display block
        position absolute
        width 10px
        background white
        height 10px
        box-shadow rgba(0,0,0,0.3) 0 1px 3px
        margin 0 0 0 0px
        //background-image url('/images/caret-active.png')
        -webkit-transition -webkit-transform linear 0.4s
        //-webkit-transform translate(110px, 0px)
        -webkit-transform rotate(90deg)
        z-index 0
        left 432px
        -webkit-transform: rotate(45deg);
        -moz-transform: rotate(45deg);
        -o-transform: rotate(45deg);
        transform: rotate(45deg);
        position: absolute;
        margin-top 55px
    b.caret-white
        -webkit-transition -webkit-transform linear 0.4s
        display block
        position absolute
        width 10px
        background white
        height 10px
        z-index 1
        left 432px
        margin-top 55px
        -webkit-transform: rotate(45deg);
        -moz-transform: rotate(45deg);
        -o-transform: rotate(45deg);
        transform: rotate(45deg);

