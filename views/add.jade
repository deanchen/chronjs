h1 Add a Document
form(action='/add', method='POST')
  p
    label(for='title') Title:
    input#title(type='text', name='doc[title]')
  p
    label(for='body') Body:
    textarea#body(rows=5, cols=20, name='doc[body]')
  p
    - each bin, key in bins
      label(for=key) #{bin}:
      input.check(type='checkbox', id=key, name='doc[bins]', value=bin)
  p
    input(type='submit', value='add')
    
form(action='/addbin', method='GET')
  label(for='addbin') Add Bin:
  input#addbin(type='text', name='addbin')
  input(type='submit', value='add')