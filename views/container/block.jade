.container.clearfix.block
    .vertical-container
        h2.vertical &nbsp

    a.rounded-hover.hover.highlight-right(href=story.url)
        .content-container
            h2 #{story.title}
            if (story.images && story.images.ThumbRect)
                img.thumb(src=story.images.ThumbRect.url)
            p.teaser #{story.teaser}