link-color = #226a9f 
corner-radius = 6px

shadow(opacity, height, width, offset)
	border 1px solid
	-webkit-box-shadow rgba(0, 0, 0, opacity) height width offset
	-moz-box-shadow rgba(0, 0, 0, opacity) height width offset
	box-shadow rgba(0, 0, 0, opacity) height width offset
	border-color #E5E5E5 #DBDBDB #D2D2D2

border-radius(corner-radius)
	-webkit-border-radius corner-radius
	-moz-border-radius corner-radius
	-o-border-radius corner-radius
	-khtml-border-radius corner-radius
	border-top-left-radius corner-radius corner-radius
	border-top-right-radius corner-radius corner-radius
	border-bottom-right-radius corner-radius corner-radius
	border-bottom-left-radius corner-radius corner-radius

body
	.container
		margin-top 10px
		position relative

	.container.sidebar
		width 316px
		.rounded
			width 300px
	
	.container.twitter
		.text
			h3
				color link-color
				font-size 0.8em
			p	
				font-size 0.7em
				line-height 1.1em
				padding-left 15px
		img
			border-left 1px solid #CCC
			padding-left 8px
			float right
			width 65px
	

	.rounded
		border-radius(4px)
		shadow(0.3, 0px, 1px, 3px)
		
		background-color white
		padding 7px

	
	a.rounded:hover
		background #e9e9e9
		background transparent -webkit-gradient(linear,left bottom,left top,color-stop(0, rgb(237,237,237)),color-stop(.5, rgb(255,255,255)))
		background transparent -moz-linear-gradient(center bottom,rgb(237,237,237) 0%,rgb(255,255,255) 50%)
		
	
	.vertical-container
		writing-mode tb-rl
		filter flipv fliph
		
		-webkit-transform rotate(-90deg)
		-moz-transform rotate(-90deg)
		-o-transform rotate(-90deg)
		white-space nowrap
		display block
		
		float left
		
		-webkit-transform-origin-x 0px
		-webkit-transform-origin-y 100%
		
		-moz-transform-origin 0px 100%
		position relative
		left 1px
		border-bottom 3px solid #555
		
			
		.vertical
			color #555
			text-shadow 1px 1px 1px #CCC
			
			text-transform uppercase
			margin-bottom -4px
			
	.vertical-container.discrete
		border-bottom none
		padding-bottom 3px
		.vertical
			color #999
			text-shadow none
		
	
	.rounded
		float right
	
	.clearfixafter
		content "."
		display block
		clear both
		visibility hidden
		line-height 0
		height 0
	
	 
	.clearfix
		display inline-block
	
	 
	html[xmlns] .clearfix
		display block
	
	 
	* html .clearfix
		height 1%
	
