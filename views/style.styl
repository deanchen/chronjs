link-color = #226a9f 
text-color = #333
bg-color = #F5F6F7

html, body
	width 100%
	height 100%
	background-color bg-color

body
	
	font-family: Arial,Helvetica,sans-serif;
	
	a
		text-decoration none
		color link-color
	
		*
			color text-color
	
	h1, h2, h3, h4, h5, h6
		font-family Georgia,"Century Schoolbook","Times New Roman",Times,serif
		
	
	h1
		font-weight bold
	
	#shell
		margin 0px auto
		width 972px
	
	header, section, footer
		width 972px
	
	#header-top
		height 100px
		background-color #003564
		box-shadow 0 1px 3px rgba(0,0,0,.4);
		border-bottom 2px solid white 
		
	#header-bottom
		height 100px
		background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, rgb(51,102,153)),color-stop(1, rgb(255,255,255)));

		border-bottom-right-radius 4px
		border-bottom-left-radius 4px
		box-shadow: 0px 1px 3px rgba(0,0,0,.4);\
		
		h1
			font-family Didot, "Didot LT STD", "Hoefler Text", Garamond, "Times New Roman", serif
			color #222
		nav
			h2
				color #333
				margin-top 60px
				font-size 0.9em
				text-transform uppercase
				float left
				margin-right 20px
				letter-spacing 1px
				text-shadow: 0px -1px 0px #BBB

			h2.first
				margin-left 1em
			
			h2.last
			
			a
				color #333
	section
		margin-top 20px

#sidebar
	float right
	margin-top -3px
	.container
		margin-bottom 1em

#shell .rotator
	width 630px
	float left

#shell .pb-pageindicator
	a.page
		width 180px
		height 52px
	a.page.first
		margin-top -10px