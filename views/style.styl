link-color = #226a9f 
text-color = #333
bg-color = #F5F6F7

html, body
	width 100%
	height 100%
	background-color bg-color

body
	
	font-family: Arial,Helvetica,sans-serif;
	
	a
		text-decoration none
		color link-color
	
		*
			color text-color
	
	h1, h2, h3, h4, h5, h6
		font-family Georgia,"Century Schoolbook","Times New Roman",Times,serif
		
	
	h1
		font-weight bold
	
	#shell
		margin 0px auto
		width 972px
	
	header, section, footer
		width 972px
	
	#header-top
		height 100px
		background-color #003564
		box-shadow 0 1px 3px rgba(0,0,0,.4);
		border-bottom 2px solid white 
		
	#header-bottom
		height 100px
		background-color #006699
		border-bottom-right-radius 4px
		border-bottom-left-radius 4px
		box-shadow: 0px 1px 3px rgba(0,0,0,.4)
		
		h1
			font-family Didot, "Didot LT STD", "Hoefler Text", Garamond, "Times New Roman", serif
			font-size 3.8em
			color white
			font-weight normal
			margin-left 15px
			text-shadow: 1px 2px 2px #333
			letter-spacing -2px
		nav
			h2
				font-weight normal
				text-transform uppercase
				float left
				margin-right 20px
				text-shadow: 1px 2px 2px #333
				letter-spacing -1px
			
			h2.first
				margin-left 1em
			
			h2.last
			
			a
				color white
	section
		margin-top 20px

#sidebar
	float right
	margin-top -3px
	.container
		margin-bottom 1em

#main
	width 630px
	float left
	


#shell .pb-pageindicator
	a.page
		width 180px
		height 52px
	a.page.first
		margin-top -10px