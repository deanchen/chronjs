page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  642px

transition()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

container-vertical-spacing = 23px

body section > #news
    rounded-image()
        img
            border-radius 4px
            -webkit-box-shadow 0px 0px 4px #999
            -webkit-transition box-shadow 0.25s linear
        a.hover:hover img
            -webkit-box-shadow 0px 0px 4px black

    top-content-full()
        width top-content-width
        .rounded
            width (top-content-width - (container-padding * 2))

    .sidebar
        float right
        width 490px
        .top
            .medium-rectangle
                float right
            .blog
                float left
                .rounded
                    width 155px
                    height 250px
        .left
            float right
            // align side bar with main content bar

            .container
                width = 250px
                width width + 3 * 2

                .content-container
                    h2
                        font-size 1em
                        margin-bottom 5px
                .rounded
                    width width

        .videos
            .content-container
                padding 0px

        .right
            float left
            // align side bar with main content bar
            .container
                width = 206px
                width width + 3 * 2

                .rounded
                    width width

    .main
        a.rounded-hover
            :hover
                h1, h2, h3, h4
                    color #36C
            h1, h2, h3, h4
                transition(color, .25s, linear)

        .row
            .content-container
                img.thumb
                    border-radius 4px

        width 460px
        float left
        .content-container
                h2
                    color black
                    font-size 1.2em
                p.teaser
                    color #444
        .featured
            .content-container

                h2
                    color black
                    font-size 1.2em
                    margin 0px 3px
                p.teaser
                    color #444
                    margin 0px 3px
                img
                    width 454px
        .headline
            .rounded-hover
                padding 0px
                .content-container
                    img
                        width 138px
                        float left
                        margin-right 10px
                        margin-left -1px
                    .text
                        margin-top -4px
                    h2
                        margin-top 3px
                        color black
                        font-size 1.2em
                        margin-left 148px
                    p.teaser
                        color #444
                        font-size 1em
                        line-height 1.3em
                        margin-left 148px
        > .row
            > .block
                width 150px
                float left
                padding-left 5px
                .container
                    width 150px
                    .rounded-hover
                        height 220px
                float
                    left
                img
                    width 138px
                h2
                    height 45px
                    font-size 1em
                    margin-bottom 3px
                    margin-top -4px
                    line-height 1.2em
                p.teaser
                    font-size 0.9em
                    line-height 1.3em
            .block.first
                padding-left 0px
