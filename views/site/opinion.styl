page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  642px

container-vertical-spacing = 23px
body section > #opinion
    rounded-image()
        img
            border-radius 4px
            -webkit-box-shadow 0px 0px 4px #999
            -webkit-transition box-shadow 0.25s linear
        a.hover:hover img
            -webkit-box-shadow 0px 0px 4px black

    top-content-full()
        width top-content-width
        .rounded
            width (top-content-width - (container-padding * 2))
    .top
        > .main
            .rounded-hover
                width 470px
                img
                    width 464px
        > .right
            padding-left 20px
            width 476px

            .rounded-hover
                height 163px
                h2
                    font-size 1.3em
                    margin-bottom 5px
                p.teaser
                    color #444
                .text
                    float left
                    width 300px
                img
                    width 157px
                    height 157px
                    float right
                    border-radius 4px

    .middle
        > div
            .container.block
                .rounded-hover
                    width 304px
                    height 300px
        > .last > .container.block .rounded-hover
            width 306px

    div
        > div
            float left
            .container.block


                float left
                margin-right 20px
                .rounded-hover
                    width 222px
                    height 222px

                    h2
                        font-size 1.2em
                    p.teaser
                        color #444
                        line-height 1.3em
