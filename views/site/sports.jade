.nav.clearfix
    if (subsections)
        for subsectionName,subsectionPath in subsections
            h2
                a(href='/section/'+subsectionPath) #{subsectionName}
#sports
    .top.clearfix
        if (model.Slideshow)
            .slideshow-wrapper.right-select!=partial('slideshow/slideshow-right')
    .middle.clearfix
        .left
            if (model.Blog)
                .last!=partial('container/story-list', {title: "Blog", stories:model.Blog})
        .right
            if (model.Stories)
                .column.first
                    if (model.Stories[0])
                        .first!=partial('container/row', {story: model.Stories[0]})
                    if (model.Stories[2])
                        div!=partial('container/row', {story: model.Stories[2]})
                    if (model.Stories[4])
                        .last!=partial('container/row', {story: model.Stories[4]})
                .column
                    if (model.Stories[1])
                        .first!=partial('container/row', {story: model.Stories[1]})
                    if (model.Stories[3])
                        div!=partial('container/row', {story: model.Stories[3]})
                    if (model.Stories[5])
                            .last!=partial('container/row', {story: model.Stories[5]})

    //
        .bottom
            .row.clearfix
                .m-basketball!=partial('container/sports-block.jade', {title: "Men's Basketball"})
                .m-soccer!=partial('container/sports-block.jade', {title: "Men's Soccer"})
                .m-tennis.last!=partial('container/sports-block.jade', {title: "Men's Tennis"})
            .row.clearfix.last
                .w-basketball!=partial('container/sports-block.jade', {title: "Women's Basketball"})
                .w-soccer!=partial('container/sports-block.jade', {title: "Women's Soccer"})
                .w-tennis.last!=partial('container/sports-block.jade', {title: "Women's Tennis"})
