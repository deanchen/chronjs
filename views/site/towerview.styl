page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  642px

container-vertical-spacing = 23px
body section > #towerview
    rounded-image()
        img
            border-radius 4px
            -webkit-box-shadow 0px 0px 4px #999
            -webkit-transition box-shadow 0.25s linear
        a.hover:hover img
            -webkit-box-shadow 0px 0px 4px black

    top-content-full()
        width top-content-width
        .rounded
            width (top-content-width - (container-padding * 2))
    p.teaser
        color #444
    > .main
        float left
        width 644px
        > .row.first

            .container
                margin-bottom 10px
                .content-container
                    padding-left 2px
                    padding-right 2px
                    h2
                        font-size 1.5em
                    p.teaser
                        font-size 1.2em
                    margin-bottom 5px
                    width 636px + 6px
                    img
                        width 636px
                        border-radius 4px
        
        > .row.feature
            .first
                .container
                    margin-right 12px
            .container

                width = 315px
                width width
                float left
                .content-container
                    padding 0px
                    
                    .rounded-hover
                        width width - 6px

                    h2
                        margin-bottom 8px
                        font-size 1.2em
                    h2, p.teaser
                        width 145px
                        float right
                        padding-right 5px
                    p.teaser
                        font-size 1em
                        height 1.4em
                    img
                        border-radius 4px
                        float left
                        width 150px
                        height 150px

        > .row .block-row
            .rounded
                float left
                width 642px
                height 241px
    > .sidebar
        width 308px
        float right
        .prefix .container
            margin-bottom 10px
    