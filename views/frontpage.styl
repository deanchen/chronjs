page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  636px

container-vertical-spacing = 30px

top-content-full()
	width top-content-width
	.rounded
		width (top-content-width - (container-padding * 2))
.sidebar
	float right
	margin-top -1px

	.container
		width 300px + 3 * 2

		h1, h2, h3, h4, h5
			text-shadow 0px 1px 1px white

		.rounded
			width 300px

.full-banner
	float right

.print-edition
	float left
	width 140px
#top
	margin-bottom 10px
	> .content
		float left
		width top-content-width

		.rounded
			padding container-padding

			a.hover.highlight-right
				margin-right container-padding * -2 + 1
			a.hover.highlight-left
				margin-left container-padding * -2 + 1

		.top-news
			.container
				top-content-full()
			.rounded
				padding = 10px
				width = top-content-width - 2 - padding
				leftColumnWidth = width/2


				.content-container
					> .left
						width leftColumnWidth - padding

						a.hover
							padding-left padding

					> .right
						width (width - leftColumnWidth) - padding

						a.hover
							padding-right padding

				a.hover h2, h3
					font-size 1.2em
					margin-bottom 7px

				a.hover h3
					margin-top 0px
					font-size 1.2em

				a.hover
					padding-top 3px
					padding-bottom 3px

				a.hover.teaser
					padding-bottom 20px

				p
					font-size 1em
					
				ul li h3
						background url('/images/bullet.gif') no-repeat left 7px

#news, #sports
	container-width = (page-width/2 - container-vertical-spacing/2)
	padding = 10px
	usable-width = container-width - (padding + 4) * 2
	width container-width

	.rounded
		padding padding
		width 451px

	.content-container
		a.hover.highlight-right, a.hover.highlight-left
			margin 0px
			
		h2, h3
			font-size 1.2em
			line-height 1.4em
		h4
			font-size 1em
			line-height 1.4em

		p.teaser
				margin-top 5px
				
		.top
			padding-bottom 5px
			margin-bottom 15px
			// fix highlight locaiton
			a.hover
				margin-left -13px
				padding-left 13px
			img
				float right
				border-radius 4px
			.text
				float left
				width 240px
				height 115px

		.bottom
			padding-top 10px

			bottom-padding-top = 6px
			
			clear both
			.left
				width 240px
				a.hover
					padding-top 8px
					padding-bottom 8px
					margin-left -13px
					padding-left 13px

				a.hover.first
					padding-top bottom-padding-top
				a.hover.last
					padding-bottom 0px
			.right
				width 190px

				ul li
					padding-left 11px
					background url('images/bullet.gif') no-repeat left 10px

					a.hover
						padding-top bottom-padding-top
						margin-right -13px
						padding-right 13px
						padding-bottom 6px



#news
	float left
	.content-container h2
		padding-bottom 4px
#sports
	float right
	.content-container h2
		padding-bottom 7px
