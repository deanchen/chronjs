link-color = #36c

#sidebar
	float right

#main
	float left
	width 630px

#main .container
	width 630px
	.rounded
		width 630px - 1

	.rounded.collection
		padding-left 0px
		padding-right 0px

.top-news .rounded
	width = 620px
	leftColumnWidth = 303px
	padding = 10px
	> .left, > .right
		margin-top 1px

	.left
		width leftColumnWidth - padding + 2
		float left
		
		a.hover
			padding-left 10px

	.right
		width (width - leftColumnWidth) - padding
		float right
		a.hover
			padding-right 10px

	a.hover h2, h3
		color black
		font-size 1.2em
		margin-bottom 3px


	a.hover h3
		margin-bottom 0px
		font-size 1.1em

	a.hover
		padding-top 3px
		padding-bottom 3px

	a.hover.teaser
		padding-bottom 7px
		
	p
		font-size 0.9em