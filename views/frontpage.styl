page-width = 972px
link-color = #36c
container-padding = 4px
top-content-width =  636px

container-vertical-spacing = 30px

top-content-full()
	width top-content-width
	.rounded
		width (top-content-width - (container-padding * 2))
.sidebar
	float right
	margin-top -1px

	.container
		width 300px + 3 * 2

		h1, h2, h3, h4, h5
			text-shadow 0px 1px 1px white

		.rounded
			width 300px

.full-banner
	float right

.print-edition
	float left
	width 140px
#top
	margin-bottom 10px
	> .content
		float left
		width top-content-width

		.rounded
			padding container-padding

			a.hover.highlight-right
				margin-right container-padding * -2 + 1
			a.hover.highlight-left
				margin-left container-padding * -2 + 1

		.top-news
			.container
				top-content-full()
			.rounded
				padding = 10px
				width = top-content-width - 2 - padding
				leftColumnWidth = width/2


				.content-container
					> .left
						width leftColumnWidth - padding

						a.hover
							padding-left padding

					> .right
						width (width - leftColumnWidth) - padding

						a.hover
							padding-right padding

				a.hover h2, h3
					font-size 1.2em
					margin-bottom 3px

				a.hover h3
					margin-top 0px
					font-size 1.1em

				a.hover
					padding-top 3px
					padding-bottom 3px

				a.hover.teaser
					padding-bottom 7px

				p
					font-size 0.9em
					
				ul li h3
						background url('/images/bullet.gif') no-repeat left 7px

#news, #sports
	container-width = (page-width/2 - container-vertical-spacing/2)
	width container-width

	.content-container
		h2, h3
			font-size 1.2em
		h4
			font-size 1.1em

		.left
			width ((container-width - 4)/2)

		.right
			width (container-width/2)

#news
	float left

#sports
	float right