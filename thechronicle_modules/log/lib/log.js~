function configureLogger(callback) {
    winston.setLevels(winston.config.syslog.levels);
    winston.add(winston.transports.Loggly, {
	subdomain: config.get('LOGGLY_SUBDOMAIN'),
	inputToken: config.get('LOGGLY_INPUT_KEY'),
	level: 'warning',
	json: true
    });
//    winston.handleExceptions();
    winston.debug('debug message');
    winston.warning('warning message');

    // TODO: Handle logging errors with email alert
    winston.on('error', function(err) {
	console.error("Logging error: " + JSON.stringify(err));
    });

    console.log("doing cb");

    callback();
}